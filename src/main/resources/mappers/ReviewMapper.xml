<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace는 패키지 명 + 인터페이스명과 맞춰줘야한다. -->
<mapper namespace="edu.kosmo.krm.mapper.ReviewMapper">

	<resultMap id="ReviewMap" type="edu.kosmo.krm.joinVO.JoinReviewVO">
	
		<result property="nickname" column="nickname" />
		<result property="board_id" column="board_id" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<result property="board_date" column="board_date" />	
		<result property="hit" column="hit"/>
		<result property="score" column="score" />
		<result property="order_id" column="order_id" />
		<result property="order_detail_id" column="order_detail_id" />
		<result property="order_detail_board_id" column="order_detail_board_id" />
	</resultMap>
	

	<select id="getReviewList" resultType="edu.kosmo.krm.joinVO.JoinReviewVO">
	   <![CDATA[
              SELECT * FROM (
              SELECT ROWNUM AS RNUM, A.* FROM (
                       SELECT
							        M.NICKNAME,
							        B.ID AS board_id,
							        B.TITLE,
							        B.CONTENT,
							        B.BOARD_DATE,
							        B.HIT,
							        B.SCORE,
							        MO.ID AS order_id
                         FROM
							        MEMBER M,
							        BOARD B,
							        BOARD_CATEGORY BC,
							        MEMBER_ORDER MO,
							        ORDER_DETAIL OD,
							        ORDER_DETAIL_BOARD ODB,
							        PRODUCT P
                         WHERE
                                    M.ID = B.MEMBER_ID
                            AND
                                    B.BOARD_CATEGORY_ID = BC.ID
                            AND
                                    M.ID = MO.MEMBER_ID
                            AND
                                    MO.ID = OD.ORDER_ID
                            AND
                                    OD.ID = ODB.ORDER_DETAIL_ID
                            AND
                                    OD.PRODUCT_ID = P.ID
                            AND
                              		M.ID = #{memberVO.id}
              ) A WHERE ROWNUM <= #{criteria.pageNum} * #{criteria.amount}
         	) WHERE RNUM > (#{criteria.pageNum}-1) * #{criteria.amount}
	   ]]>
	</select>
	
	<select id="getReviewTotalCount" resultType="int">
	   <![CDATA[
				SELECT count(*) FROM board B 
   						WHERE b.board_category_id = 3 
   						AND b.member_id = 1
	   ]]>
	</select>
	
